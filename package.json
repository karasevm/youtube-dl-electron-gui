{
  "name": "youtube-dl-electron-gui",
  "version": "1.0.0",
  "description": "GUI for youtube-dl",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Maksim Karasev",
    "email" : "contact@karasevm.ru"
  },
  "license" : "GPL-3.0",
  "devDependencies": {
    "electron": "^7.1.3",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.0"
  },
  "build": {
    "appId": "com.electron.youtube-dl-gui",
    "copyright": "Copyright Â© 2020 Maksim Karasev",
    "extraResources": [
      {
        "from": "./bin/",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }],
    "win": {
      "target":[
        {
          "target": "portable",
          "arch": [
            "ia32"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "icon": "icon.ico"
  }
}
